\mode<presentation>

% custom colours
\definecolor{myBlue}{RGB}{66, 113, 155}
\definecolor{myLBlue}{RGB}{185, 225, 249}
\definecolor{myDBlue}{RGB}{23, 46, 77}
\definecolor{myGray}{RGB}{90, 90, 90}
\definecolor{myBlack}{RGB}{0, 10, 20}
\definecolor{myWhite}{RGB}{255, 255, 255}
\definecolor{myCyan}{RGB}{44, 215, 225}

%% set element colours

% title
\setbeamercolor{title}{fg=myDBlue}
\setbeamercolor{subtitle}{fg=myBlue}
\setbeamercolor{author}{fg=myWhite}
\setbeamercolor{date}{fg=myWhite}

% frame titles
\setbeamercolor{frametitle}{fg=myDBlue}
\setbeamercolor{framesubtitle}{fg=myBlue} %hardcoded in frametitle

%section titles
\setbeamercolor{sectiontitle}{fg=myDBlue} %hardcoded

% general
\setbeamercolor{itemize item}{fg=myBlue}
\setbeamercolor{itemize subitem}{fg=myBlue}
\setbeamercolor{enumerate item}{fg=myBlue}
\setbeamercolor{enumerate subitem}{fg=myBlue}
\setbeamercolor{normal text}{fg=myDBlue}
\setbeamercolor{footlinecolor}{bg=myLBlue}
\setbeamercolor{alerted text}{fg=myCyan}


% captions
\setbeamercolor{caption name}{fg=myDBlue}

\mode<all>
